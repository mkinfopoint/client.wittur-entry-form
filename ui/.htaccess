RewriteEngine On

# Serve static files directly (HTML, CSS, JS, images, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle Next.js static routes (pretty URLs)
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect invalid URLs to 404.html
ErrorDocument 404 /404.html
RewriteRule .* - [R=404,L]
