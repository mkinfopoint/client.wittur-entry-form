# ===============================
# APP CONFIGURATION
# ===============================
APP=development
PORT=3000
CLIENT=DemoClient
TIMEZONE=+05:30

# ===============================
# DATABASE CONFIGURATION (MySQL)
# ===============================
DB_DIALECT=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=demo_database
DB_USER=demo_user
DB_PASSWORD=demo_password

# ===============================
# JWT CONFIGURATION
# ===============================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1d

REFRESH_TOKEN_SECRET=your_refresh_token_key
REFRESH_TOKEN_EXPIRATION=7d

# ===============================
# HASH KEY (For encryption or HMAC)
# ===============================
HASH_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# ===============================
# MAIL CONFIGURATION (Mailtrap or Any Test SMTP)
# ===============================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=demo_smtp_user
SMTP_PASSWORD=demo_smtp_password
EMAIL_FROM=no-reply@example.com

# ===============================
# GOOGLE OAUTH CONFIGURATION
# ===============================
GOOGLE_CLIENT_ID=000000000000-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret